@model TorneosAdmin.Web.Models.ReciboInscripcion
@{
    Layout = null;
    var base64 = Convert.ToBase64String(Model.FotoEquipo);
    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
}

<!DOCTYPE html>

<html>
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta charset="utf-8" />
    <title>Recibo Inscripciones</title>

    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0" />

    <!-- bootstrap & fontawesome -->
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/font-awesome/5.13.0/css/all.min.css" />

    <!-- page specific plugin styles -->
    <!-- text fonts -->
    <link rel="stylesheet" href="~/css/fonts.googleapis.com.css" />

    <!-- ace styles -->
    <link rel="stylesheet" href="~/css/ace.min.css" class="ace-main-stylesheet" id="main-ace-style" />

    <!--[if lte IE 9]>
        <link rel="stylesheet" href="assets/css/ace-part2.min.css" class="ace-main-stylesheet" />
    <![endif]-->
    <link rel="stylesheet" href="~/css/ace-skins.min.css" />
    <link rel="stylesheet" href="~/css/ace-rtl.min.css" />

    <!--[if lte IE 9]>
      <link rel="stylesheet" href="assets/css/ace-ie.min.css" />
    <![endif]-->
    <!-- inline styles related to this page -->
    <!-- ace settings handler -->
    <script src="~/js/ace-extra.min.js"></script>

    <!-- HTML5shiv and Respond.js for IE8 to support HTML5 elements and media queries -->
    <!--[if lte IE 8]>
    <script src="assets/js/html5shiv.min.js"></script>
    <script src="assets/js/respond.min.js"></script>
    <![endif]-->
</head>

<body class="no-skin">
    <div class="main-container ace-save-state" id="main-container">
        <script type="text/javascript">
            try { ace.settings.loadState('main-container') } catch (e) { }
        </script>

        <div class="main-content">
            <div class="main-content-inner">
                <div class="page-content">
                    <div class="row">
                        <div class="col-xs-12">
                            <!-- PAGE CONTENT BEGINS -->
                            <div class="space-6"></div>

                            <div class="row">
                                <div class="col-sm-10 col-sm-offset-1">
                                    <div class="widget-box transparent">
                                        <div class="widget-header widget-header-large">
                                            <h3 class="widget-title grey lighter">
                                                <i class="ace-icon fa fa-leaf green"></i>
                                                @Model.Campeonato
                                            </h3>

                                            <div class="widget-toolbar no-border invoice-info">
                                                <span class="invoice-info-label">No Pago:</span>
                                                <span class="red"># @Model.ID.ToString().PadLeft(7,'0')</span>

                                                <br />
                                                <span class="invoice-info-label">Fecha:</span>
                                                <span class="blue">@DateTime.Now.ToString("dd/MM/yyyy")</span>
                                            </div>

                                            <div class="widget-toolbar hidden-480">
                                                <a href="#">
                                                    <i class="ace-icon fa fa-print"></i>
                                                </a>
                                            </div>
                                        </div>

                                        <div class="widget-body">
                                            <div class="widget-main padding-24">
                                                <div class="row">
                                                    <div class="col-xs-6">
                                                        <div class="row">
                                                            <div class="col-xs-11 label label-lg label-info arrowed-in arrowed-right">
                                                                <b>Barrial del sur</b>
                                                            </div>
                                                        </div>

                                                        <div>
                                                            <br />
                                                            <div class="text-center">
                                                                <img src="~/images/Portada/ligasur2.png" width="100" height="100" />
                                                            </div>

                                                            <ul class="list-unstyled spaced">
                                                                <li>
                                                                    <i class="ace-icon fa fa-caret-right blue"></i>Av. Univerisitaria y Cayambe
                                                                </li>

                                                                <li>
                                                                    <i class="ace-icon fa fa-caret-right blue"></i>
                                                                    Tel:
                                                                    <b class="red">0999848476</b>
                                                                </li>

                                                                <li>
                                                                    <i class="ace-icon fa fa-caret-right blue"></i>ligasur@gmail.com
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div><!-- /.col -->

                                                    <div class="col-xs-6">
                                                        <div class="row">
                                                            <div class="col-xs-11 label label-lg label-success arrowed-in arrowed-right">
                                                                <b>Equipo</b>
                                                            </div>
                                                        </div>

                                                        <div>
                                                            <br />
                                                            <div class="text-center">
                                                                <img src="@imgSrc" width="100" height="100" />
                                                            </div>

                                                            <ul class="list-unstyled  spaced">
                                                                <li>
                                                                    <i class="ace-icon fa fa-caret-right green"></i>@Model.NombreEquipo
                                                                </li>

                                                                <li>
                                                                    <i class="ace-icon fa fa-caret-right green"></i>Diregente: @Model.Dirigente
                                                                </li>

                                                                <li>
                                                                    <i class="ace-icon fa fa-caret-right green"></i>@Model.Categoria
                                                                </li>
                                                            </ul>
                                                        </div>
                                                    </div><!-- /.col -->
                                                </div><!-- /.row -->

                                                <div class="space"></div>

                                                <div>
                                                    <table class="table table-striped table-bordered">
                                                        <thead>
                                                            <tr>
                                                                <th class="center">#</th>
                                                                <th>Descripción</th>
                                                                <th>Total</th>
                                                            </tr>
                                                        </thead>

                                                        <tbody>
                                                            <tr>
                                                                <td class="center">1</td>
                                                                <td>
                                                                    Pago de garantía
                                                                </td>
                                                                <td>$ @Model.MontoGarantia.ToString("0.00")</td>
                                                            </tr>

                                                            <tr>
                                                                <td class="center">2</td>
                                                                <td>
                                                                    Pago de Inscripción
                                                                </td>
                                                                <td>$ @Model.MontoGarantia.ToString("0.00")</td>
                                                            </tr>

                                                            <tr>
                                                                <td class="center">&nbsp;</td>
                                                                <td>&nbsp;</td>
                                                                <td>&nbsp;</td>
                                                            </tr>

                                                            <tr>
                                                                <td class="center">&nbsp;</td>
                                                                <td>&nbsp;</td>
                                                                <td>&nbsp;</td>
                                                            </tr>
                                                        </tbody>
                                                    </table>
                                                </div>

                                                <div class="hr hr8 hr-double hr-dotted"></div>

                                                <div class="row">
                                                    <div class="col-sm-5 pull-right">
                                                        <h4 class="pull-right">
                                                            Total :
                                                            <span class="red">$ @((Model.MontoGarantia + Model.MontoGarantia).ToString("0.00"))</span>
                                                        </h4>
                                                    </div>
                                                    <div class="col-sm-7 pull-left"> Información adicional: </div>
                                                </div>

                                                <div class="space-6"></div>
                                                <div class="well">
                                                    @Model.Observaciones
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- PAGE CONTENT ENDS -->
                        </div><!-- /.col -->
                    </div><!-- /.row -->
                </div><!-- /.page-content -->
            </div>
        </div><!-- /.main-content -->
    </div><!-- /.main-container -->
    <!-- basic scripts -->
    <!--[if !IE]> -->
    <script src="~/js/jquery-2.1.4.min.js"></script>

    <!-- <![endif]-->
    <!--[if IE]>
    <script src="assets/js/jquery-1.11.3.min.js"></script>
    <![endif]-->
    <script type="text/javascript">
        if ('ontouchstart' in document.documentElement) document.write("<script src='assets/js/jquery.mobile.custom.min.js'>" + "<" + "/script>");
    </script>
    <script src="assets/js/bootstrap.min.js"></script>

    <!-- page specific plugin scripts -->
    <!-- ace scripts -->
    <script src="~/js/ace-elements.min.js"></script>
    <script src="~/js/ace.min.js"></script>

    <!-- inline scripts related to this page -->
</body>
</html>
